@model IEnumerable<Web.Models.ClothingType>

@{
    ViewData["Title"] = "衣物類型清單";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Create">建立新衣物類型</a>
</p>
<table id="myTable" class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Seq)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Spec)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.WashingPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DryCleaningPrice)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Remark)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Seq)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Spec)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.WashingPrice)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DryCleaningPrice)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Remark)
			</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id">編輯</a> |
				<a asp-action="Details" asp-route-id="@item.Id">詳細內容</a> |
				<a asp-action="Delete" asp-route-id="@item.Id">刪除</a>
			</td>
		</tr>
}
	</tbody>
</table>

