@model Web.Models.ClothingEditViewModel

@{
    ViewData["Title"] = "建立訂單(收衣)";
}

<h1>@ViewData["Title"]</h1>

<h4>Clothing</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Seq" class="control-label"></label>
				<input asp-for="Seq" class="form-control" />
				<span asp-validation-for="Seq" class="text-danger"></span>
			</div>
			<input type="hidden" asp-for="MemberId" />
			<div class="form-group">
				<label asp-for="MemberId" class="control-label"></label>
				<select asp-for="MemberId" class="form-control" asp-items="ViewBag.Members" disabled="disabled"></select>
				<span asp-validation-for="MemberId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Type" class="control-label"></label>
				<select asp-for="Type" class="form-control" asp-items="ViewBag.ClothingTypes"></select>
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Color" class="control-label"></label> (請按住 Ctrl 複選)
				@Html.ListBox("SelectedColorIds", Model.Colors)
				<span asp-validation-for="Color" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Action" class="control-label"></label>
				<select asp-for="Action" class="form-control" asp-items="ViewBag.ClothingActions"></select>
				<span asp-validation-for="Action" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Remark" class="control-label"></label>
				<input asp-for="Remark" class="form-control" />
				<span asp-validation-for="Remark" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Amount" class="control-label"></label>
				<input asp-for="Amount" class="form-control" />
				<span asp-validation-for="Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DiscountAmount" class="control-label"></label>
				<input asp-for="DiscountAmount" class="form-control" />
				<span asp-validation-for="DiscountAmount" class="text-danger"></span>
			</div>
			@*<div class="form-group">
			<label asp-for="ReceiveDt" class="control-label"></label>
			<input asp-for="ReceiveDt" class="form-control" />
			<span asp-validation-for="ReceiveDt" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PickupDt" class="control-label"></label>
			<input asp-for="PickupDt" class="form-control" />
			<span asp-validation-for="PickupDt" class="text-danger"></span>
		</div>*@
			@*<div class="form-group">
			<label asp-for="PicNo" class="control-label"></label>
			<input asp-for="PicNo" class="form-control" />
			<span asp-validation-for="PicNo" class="text-danger"></span>
		</div>*@
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">回到衣物清單</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
