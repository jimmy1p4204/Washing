@{
	ViewData["Title"] = "首頁";
}

<div class="row">
	<div class="col-md-6">
		<h4>衣物相關功能:</h4>
		<ul>
			<li>
				<a asp-area="" asp-controller="ClothingTypes" asp-action="Index">衣物類型清單</a>
			</li>
			<li>
				<a asp-area="" asp-controller="ClothingColors" asp-action="Index">衣物顏色清單</a>
			</li>
			<li>
				<a asp-area="" asp-controller="ClothingStatus" asp-action="Index">衣物狀態清單</a>
			</li>
			<li>
				<a asp-area="" asp-controller="ClothingActions" asp-action="Index">洗衣類型清單</a>
			</li>
			<li><a asp-action="index" asp-controller="ClothingPackageTypes">衣物包裝方式清單</a></li>
			<li><a asp-action="index" asp-controller="ClothingPictures">衣物照片總覽</a></li>
		</ul>
	</div>
	@if(User.IsInRole("SystemManager")){
		<div class="col-md-6">
			<h4>權限管理功能:</h4>
			<ul>
				<li>
					<a asp-area="" asp-controller="IdentityUsers" asp-action="index">員工清單</a>
				</li>
				<li>
					<a asp-area="" asp-controller="IdentityRoles" asp-action="index">角色清單</a>
				</li>
				<li>
					<a asp-area="" asp-controller="IdentityUserRoles" asp-action="index">員工角色對應清單</a>
				</li>

			</ul>
		</div>
	}
	
</div>

<div class="row">
	@if (User.IsInRole("Manager"))
	{
		<div class="col-md-6">
			<h4>店鋪報表:</h4>
			<ul>
				<li>
					<a asp-area="" asp-controller="StoreReport" asp-action="index">店鋪報表</a>
				</li>
			</ul>
		</div>
	}
</div>
